@{
    ViewData["Title"] = "Rejestracja nowego użytkownika";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6 offset-md-3">
        <form method="post" onsubmit="alert('Rejestracja jest obecnie w fazie testowej.'); return false;">
            <h2>Rejestracja nowego użytkownika</h2>
            <hr />
            <div class="form-floating mb-3">
                <input type="text" name="registerName" class="form-control" placeholder="Imię i Nazwisko" required />
                <label for="registerName">Imię i Nazwisko</label>
            </div>
            <div class="form-floating mb-3">
                <input type="email" name="registerEmail" class="form-control" placeholder="Email" required />
                <label for="registerEmail">Adres e-mail</label>
            </div>
            <div class="form-floating mb-3">
                <input type="password" name="registerPassword" class="form-control" placeholder="Hasło" required />
                <label for="registerPassword">Hasło</label>
            </div>
            <button type="submit" class="btn btn-success w-100">Zarejestruj się</button>
        </form>

        <div class="mt-3 text-center">
            <a asp-action="Login">Powrót do logowania</a>
        </div>
    </div>
</div>