@{
    ViewData["Title"] = "Resetowanie hasła";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6 offset-md-3">
        <form method="post" onsubmit="alert('Funkcja resetowania hasła nie jest jeszcze dostępna.'); return false;">
            <h2>Resetowanie hasła</h2>
            <hr />
            <div class="form-floating mb-3">
                <input type="email" name="resetEmail" class="form-control" placeholder="Podaj swój email" required />
                <label for="resetEmail">Podaj swój email</label>
            </div>
            <button type="submit" class="btn btn-warning w-100">Resetuj hasło</button>
        </form>

        <div class="mt-3 text-center">
            <a asp-action="Login">Powrót do logowania</a>
        </div>
    </div>
</div>