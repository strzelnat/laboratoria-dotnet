@{
ViewData["Title"] = "Logowanie";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6 offset-md-3">
        <form id="account" method="post" action="/Account/Login">
            <h2>Użyj swojego konta, aby się zalogować</h2>
            <hr />

            <!-- Ukryte pole na returnUrl -->
            <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />

            <!-- Wyświetlanie błędów -->
            @if (!ViewData.ModelState.IsValid)
            {
            <div class="alert alert-danger">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                <p>@error.ErrorMessage</p>
                }
            </div>
            }

            <div class="form-floating mb-3">
                <input type="email" name="email" class="form-control" placeholder="name@example.com" required />
                <label for="email">Email</label>
            </div>

            <div class="form-floating mb-3">
                <input type="password" name="password" class="form-control" placeholder="Hasło" required />
                <label for="password">Hasło</label>
            </div>

            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Zaloguj się</button>

            <div class="mt-3 text-center">
                <p><a href="/Account/ResetPassword">Nie pamiętasz hasła?</a></p>
                <p><a href="/Account/Register">Zarejestruj się jako nowy użytkownik</a></p>
            </div>
        </form>
    </div>
</div>
