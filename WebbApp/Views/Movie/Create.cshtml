@model ModelMovie

@{
ViewData["Title"] = "Create New Movie";
Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-primary">Create New Movie</h1>

<h4 class="text-secondary">Movie Details</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" class="border p-4 rounded shadow bg-light">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="CompanyId" class="form-label"></label>
                <select asp-for="CompanyId" class="form-control"></select>
                <span asp-validation-for="CompanyId" class="text-danger"></span>
                <input name="filter" type="search" id="filter" class="form-control mt-2" placeholder="Search for a company..."/>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary w-100" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
<script>
    const select = document.getElementById("CompanyId");
    const filter = document.getElementById("filter");
    filter.onchange = async () => {
        try {
            const response = await fetch(`/api/companies?fragment=${filter.value}`);
            if (!response.ok) throw new Error(`Error: ${response.status}`);
            const companies = await response.json();
            select.innerHTML = "";
            companies.forEach(item => {
                const option = document.createElement('option');
                option.value = item.companyId;
                option.textContent = item.companyName;
                select.appendChild(option);
            });
        } catch (error) {
            console.error("Failed to fetch companies:", error);
        }
    }
</script>
}
