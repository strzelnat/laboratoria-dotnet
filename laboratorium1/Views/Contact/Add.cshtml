@model laboratorium1.Models.Contact
@using laboratorium1.Models

<h2>Add a contact: </h2>

<div class="col-6">
    <form asp-action="Add" asp-controller="Contact" method="post">
        <div>
            <label class="form-label" asp-for="FirstName"></label>
            <input class="form-control" asp-for="FirstName" type="text" />
            <span asp-validation-for="FirstName"></span>
        </div>
        <div>
            <label class="form-label" asp-for="LastName"></label>
            <input class="form-control" asp-for="LastName" type="text" />
            <span asp-validation-for="LastName"></span>
        </div>
        <div>
            <label class="form-label" asp-for="Email"></label>
            <input class="form-control" asp-for="Email" type="email" />
            <span asp-validation-for="Email"></span>
        </div>
        <div>
            <label class="form-label" asp-for="Telephone"></label>
            <input class="form-control" asp-for="Telephone" type="tel" />
            <span asp-validation-for="Telephone"></span>
        </div>
        <div>
            <label class="form-label" asp-for="BirthDate"></label>
            <input class="form-control" asp-for="BirthDate" type="date" />
            <span asp-validation-for="BirthDate"></span>
        </div>


        <div>
            <label class="form-label" asp-for="Category"></label>
            <select class="form-control" asp-for="Category">
                <option value="1">Family</option>
                <option value="2">Friend</option>
                <option value="4">Business</option>
            </select>
            <span asp-validation-for="Category"></span>
        </div>

        <button type="submit" class="btn btn-outline-primary">Add</button>
    </form>
</div>
