@model Dictionary<int, Contact>
@{
    ViewBag.Title = "Kontakty";
    Layout = "_Layout";
}

<h2>Kontakty</h2>
<a class="btn btn-primary" asp-action="Add" asp-controller="Contact">Dodaj kontakt</a>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>LastName</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var entry in Model)
        {
            <tr>
                <td>@entry.Value.FirstName</td>
                <td>@entry.Value.LastName</td>
                <td>
                    <a class="btn btn-success" asp-action="Edit" asp-controller="Contact" asp-route-id="@entry.Value.Id">Edit</a>
                    <a class="btn btn-info" asp-action="Details" asp-controller="Contact" asp-route-id="@entry.Value.Id">Details</a>
                    <a asp-controller="Contact" asp-action="Delete" asp-route-id="@entry.Value.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
