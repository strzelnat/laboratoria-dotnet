@model List<Contact>

@{
    ViewBag.Title = "Kontakty";
    Layout = "_Layout";
}



<h2>Kontakty</h2>
<a class="btn btn-primary" asp-action="Add" asp-controller="Contact">Dodaj kontakt</a>

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(Model => Model[0].FirstName)</th>
                <th>@Html.DisplayNameFor(Model => Model[0].LastName)</th>
                <th>@Html.DisplayNameFor(Model => Model[0].Category)</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var entry in Model)
            {
                <tr>
                    <td>@entry.FirstName</td>
                    <td>@entry.LastName</td>
                    <td>@entry.Category.GetDisplayName()</td>
                    <td>
                        <a class="btn btn-success" asp-action="Edit" asp-controller="Contact" asp-route-id="@entry.Id">Edit</a>
                        <a class="btn btn-info" asp-action="Details" asp-controller="Contact" asp-route-id="@entry.Id">Details</a>
                        <a asp-controller="Contact" asp-action="Delete" asp-route-id="@entry.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
