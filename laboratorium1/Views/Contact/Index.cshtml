@model List<Contact>

@{
    ViewBag.Title = "Kontakty";
    Layout = "_Layout";
}

<h2>Kontakty</h2>
<a class="btn btn-primary" asp-action="Add" asp-controller="Contact">Dodaj kontakt</a>

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model[0].FirstName)</th> 
                <th>@Html.DisplayNameFor(model => model[0].LastName)</th>
                <th>@Html.DisplayNameFor(model => model[0].Category)</th>
                <th class="text-end">Operacje</th> 
            </tr>
        </thead>
        <tbody>
            @foreach (var entry in Model)
            {
                <tr>
                    <td>@entry.FirstName</td>
                    <td>@entry.LastName</td>
                    <td>@entry.Category.GetDisplayName()</td>
                    <td>
                    <td>
                        <a class="btn btn-success" asp-action="Edit" asp-controller="Contact" asp-route-id="@entry.Id">Edytuj</a>
                        <a class="btn btn-info" asp-action="Details" asp-controller="Contact" asp-route-id="@entry.Id">Szczegóły</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-controller="Contact" asp-route-id="@entry.Id">Usuń</a>
                    </td>

                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h1>No contacts...</h1>
}
