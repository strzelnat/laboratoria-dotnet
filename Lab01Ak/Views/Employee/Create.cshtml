@model Lab01Ak.Models.Employee

<form asp-action="Create" asp-controller="Employee" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="FirstName" class="control-label">Imię</label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LastName" class="control-label">Nazwisko</label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PESEL" class="control-label">PESEL</label>
        <input asp-for="PESEL" class="form-control" />
        <span asp-validation-for="PESEL" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Position" class="control-label">Stanowisko</label>
        <input asp-for="Position" class="form-control" />
        <span asp-validation-for="Position" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Department" class="control-label">Oddział</label>
        <input asp-for="Department" class="form-control" />
        <span asp-validation-for="Department" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="HireDate" class="control-label">Data zatrudnienia</label>
        <input asp-for="HireDate" class="form-control" type="date" />
        <span asp-validation-for="HireDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TerminationDate" class="control-label">Data zwolnienia</label>
        <input asp-for="TerminationDate" class="form-control" type="date" />
        <span asp-validation-for="TerminationDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Zapisz</button>
</form>
